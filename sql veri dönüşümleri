/*
create table pers(
pers_id int primary key identity(1,1),
ad nvarchar(50),
soyad nvarchar(50),
bolno int,
maas money
)
*/

/*
select ad,soyad,
case
when bolno = 1 then 'elektrik'
when bolno = 2 then 'bilisim'
else 'baska bolum'
end as bolumdurumu
from pers


--maaşı 50000-80000 arası olanlar yüksek maaş,
--50000 altında olanlar düşük maaş bunlara dahil değilse başka maaş diye listelensin, ad soyad ile birlikte.
select ad,soyad,
case
when maas <50000 then 'düşük maaş'
when maas between 50000 and 80000 then 'yüksek maas'
else 'başka maaş'
end as Maasmiktari
from pers
*/


/*
----------------
declare @vize as tinyint
declare @vizedurumu as nvarchar(10)
set @vize = 55;
set @vizedurumu = case
when @vize<50 then 'kaldı'
when @vize>=50 then 'geçti'
else 'sınava girmedi'
end
print @vizedurumu

----------------
--bir değişken tanımlayın, bu değişkene personel tablosunda
--bulunan ilk kaydın bölüm kodunu değer olarak atayın ve ekrana yazdırın.
declare @bolumkod as tinyint
select top 1 @bolumkod=bolno from pers
print @bolumkod

----------------
--bir değişken tanımlayın, bu değişkene personel tablosunda
--bölüm kodlarının tamamını bu değişkene atayın ve ekrana yazdırın
declare @tablo table (bolno tinyint)
insert into @tablo select bolno from pers
select * from @tablo
*/

