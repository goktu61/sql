/*
--tamsayı bir değişken tanımla ve ona bir değer ata,
--bu değerin karakter türünden bir türe çevir ve ekrana yazdır.
declare @x int = 22
print @x
print convert(varchar(5),@x) + 'selam'
*/

/*
--belli bi sayı aralığında çift sayıları bulan ve ekrana yazdıran kod
declare @say int
set @say=1
while @say<100
begin
	if (@say%2 = 0)
	begin
		print cast (@say as nvarchar(10)) + ' : çifttir'
	end
	else
	begin
		print convert (varchar(10),@say) + ' : tektir'
	end
	set @say=@say+1
end
*/

